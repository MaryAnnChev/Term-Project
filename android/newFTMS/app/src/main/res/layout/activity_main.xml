<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.mcgill.ecse321.newftms.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:id="@+id/addMenuButton" />

    <TextView
        android:text="Add Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addMenuButton"
        android:layout_alignLeft="@+id/addMenuButton"
        android:layout_alignStart="@+id/addMenuButton"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_today"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/addMenuButton"
        android:layout_alignEnd="@+id/addMenuButton"
        android:id="@+id/inventoryMenuButton" />

    <TextView
        android:text="Inventory Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/inventoryMenuButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Schedule Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/scheduleMenuButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:id="@+id/scheduleMenuButton"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/inventoryMenuButton"
        android:layout_alignStart="@+id/inventoryMenuButton"
        android:layout_alignRight="@+id/inventoryMenuButton"
        android:layout_alignEnd="@+id/inventoryMenuButton" />

</RelativeLayout>
